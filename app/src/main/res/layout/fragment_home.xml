<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.presentation.view.fragment.HomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <fragment
                android:id="@+id/homeOffersFragment"
                android:name="com.example.imedical.home.presentation.view.fragment.OffersFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true" />

        <fragment
                android:id="@+id/homeBestSellersFragment"
                android:name="com.example.imedical.home.presentation.view.fragment.BestSellersFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true" />
    </LinearLayout>
</ScrollView>

