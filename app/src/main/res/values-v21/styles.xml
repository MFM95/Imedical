<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/faded_blue</item>
        <item name="homeAsUpIndicator">@drawable/ic_keyboard_arrow_left_black_24dp</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/faded_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CircularProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#b71c1c</item>
    </style>
</resources>
